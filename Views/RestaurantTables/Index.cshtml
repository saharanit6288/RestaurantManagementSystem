@model IEnumerable<RestaurantManagementSystem.Models.TableViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Reservations" asp-action="Create">Reservation Form</a>
</p>
<form asp-controller="RestaurantTables" asp-action="Index" method="get">
    <p>
        Size: <input type="text" name="Size">
        &nbsp;
        Reservation From Date: <input type="date" name="FromDate">
        &nbsp;
        Reservation To Date: <input type="date" name="EndDate">
        &nbsp;
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sits)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sits)
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.TableId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TableId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TableId">Delete</a>
            </td>*@
        </tr>
    }
    </tbody>
</table>
